{
	"name": "Inject sidebar",
	"manifest_version": 2,
	"description": "Inject a sidebar on the current tab when the page action is clicked",
	"version": "0.5",
	"background": {
		"page": "background.html",
		"persistent": false
	},
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "Inject sidebar"
	},
	"content_scripts": [
		{
			"run_at": "document_idle",
			"css": ["styles.css"],
			"matches": ["<all_urls>"],
			"js": ["script.js"]
		}
	],
	"permissions": [
		"tabs"
	]
}